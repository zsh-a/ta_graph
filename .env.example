# Trading System Environment Variables

# ===== Exchange Configuration =====
EXCHANGE_NAME=bitget
TRADING_MODE=dry-run  # dry-run or live

# Bitget API Credentials
BITGET_API_KEY=your_api_key_here
BITGET_API_SECRET=your_api_secret_here
BITGET_API_PASSPHRASE=your_passphrase_here
BITGET_SANDBOX=true  # true for testnet, false for production
BITGET_HTTP_PROXY=  # Optional HTTP proxy

# ===== AI Model Configuration =====
# ModelScope (Qwen-VL)
MODELSCOPE_API_KEY=your_modelscope_api_key

# OpenAI (备用)
OPENAI_API_KEY=your_openai_api_key

# ===== Langfuse Tracing =====
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# ===== Trading Parameters =====
# Risk Management
MAX_POSITION_SIZE_PERCENT=10.0  # Max position size as % of account
DEFAULT_LEVERAGE=10
MAX_DAILY_LOSS_PERCENT=2.0
MAX_CONSECUTIVE_LOSSES=3

# Timeframes
PRIMARY_TIMEFRAME=1h
SECONDARY_TIMEFRAME=15m

# ===== Notification =====
# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=recipient@example.com

# ===== System Configuration =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
CHECKPOINT_DIR=./checkpoints
DATA_DIR=./data
