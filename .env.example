# Database Configuration
# For PostgreSQL: postgresql://user:password@localhost:5432/database
# For SQLite (dev): sqlite:///./trading.db
DATABASE_URL=sqlite:///./trading.db

# Timeframe Configuration
# Supported values: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 12h, 1d, 1w
PRIMARY_TIMEFRAME=1h

# Model Configuration
# 可选值: local, modelscope, openai
MODEL_PROVIDER=local
MODEL_TEMPERATURE=0.1

# Default AI Model for Trading (used when not in multi-model mode)
# Options: Qwen, Deepseek, DeepseekThinking, QwenVLSFT, Doubao
DEFAULT_MODEL=Qwen

# Local API Configuration (vllm/ollama)
LOCAL_MODEL_NAME=Qwen/Qwen2-VL-7B-Instruct
LOCAL_API_URL=http://localhost:8080/v1
LOCAL_API_KEY=sk-xxx

# ModelScope Configuration
# 获取API Key: https://dashscope.console.aliyun.com/apiKey
MODELSCOPE_MODEL_NAME=qwen-vl-max
MODELSCOPE_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
MODELSCOPE_API_KEY=your_modelscope_api_key_here

# OpenAI Configuration  
OPENAI_MODEL_NAME=gpt-4o
OPENAI_API_KEY=your_openai_api_key_here

# Trading Configuration
TRADING_MODE=dry-run  # 可选值: dry-run, live
PRIMARY_TIMEFRAME=15m
MAX_POSITION_SIZE_USDT=5000
MAX_LEVERAGE=20
DAILY_LOSS_LIMIT_PERCENT=2.0

# Exchange API Configuration
EXCHANGE_NAME=bitget  # 可选值: bitget, binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET=your_secret_here
EXCHANGE_PASSPHRASE=your_passphrase_here  # For Bitget only

# Langfuse (Optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
